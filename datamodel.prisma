enum Role {
  ADMIN
  EDITOR
  MODERATOR
  USER
  DEV
}

type User {
  id: ID! @id @unique
  email: String! @unique
  accessRole: Role! @default(value: USER)
  posts: [Post!]!
}

type Post {
  id: ID! @id @unique
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  title: String!
  published: Boolean! @default(value: false)
  author: User!
  text: String!
}
