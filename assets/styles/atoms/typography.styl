body
p
  font: 400 18px/1.66 fonts.body
  color: #444


h1
  font-weight 500
  font-family: fonts.display

  +above(xl)
    font-size 60px
    line-height 68px
    margin-top 100px

  &.hero
    font-size 68px
    line-height 64px

h2
  margin-top 64px
  font-size 44px
  line-height 52px
  font-weight 400

h3
  font-size 20px
  line-height 32px

h2
h3
h4
h5
h6
  font-family: fonts.headings

margins()
  margin-bottom: smalls.tb * 2

  +above(m)
    margin-bottom: smalls.tb * 3

  +above(l)
    margin-bottom: smalls.tb * 4

  +desktop()
    margin-bottom: smalls.tb * 5

h1
h2
h3
h4
h5
h6
  color black
  margins()

article > *
  margins()

table
  max-width 100%
  display flex
  flex-flow column wrap
  border 1px solid red


p
  &:not(:last-child)
    margin-bottom: smalls.tb * 4

a
  display block
  color: colors.principal.dark
  text-decoration none

  &:hover
    text-decoration underline

figcaption
  font-size 12px
  font-style italic
  color #777

.meta
  color: colors.principal.light
  font-size 10px
  line-height 12px
  display block

.subtitle
  font-size 20px
  line-height 32px
  color #222

  +above(m)
    font-size 24px
    line-height 32px

  +above(xl)
    font-size 32px
    line-height 40px



.ui
  font-family: fonts.ui
  h1
  h2
  h3
  h4
  h5
  h6
  p
    font-family: fonts.ui
